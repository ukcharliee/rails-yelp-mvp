<h1>New Restaurant</h1>

<%= simple_form_for @restaurant do |f| %>
  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :phone_number %>
  <%= f.input :category, collection: [ "French", "Indian", "Italian", "Chinese", "Turkish","Burger"]
 %>
  <%= f.submit %>
<% end %>

<%= link_to 'Back', restaurants_path %>
