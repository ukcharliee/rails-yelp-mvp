<h1 class="text-center">Post review for <%= @restaurant.name %></h1>
<div class="container">
  <div class="row">
    <div class="col-xs-12 col-xs-offset-3">

      <%= simple_form_for [@restaurant, @review] do |f| %>

      <%= f.input :content, placeholder: "great place" %>
      <%= f.submit "Post review", class:"btn btn-primary" %>
      <% end %>

    </div>
  </div>
</div>
